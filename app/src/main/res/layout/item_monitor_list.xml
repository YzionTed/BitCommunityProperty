<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ll_item"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:padding="10dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/icon_shexiangtou" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:textSize="@dimen/common_sp_16"
            android:id="@+id/tv_xinghao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BYT-005"
            android:textColor="@color/tv_black_33" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="小区大门一号监控"
            android:textColor="@color/tv_gray_66"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:textColor="@color/white"
        android:textSize="@dimen/common_sp_12"
        android:minHeight="20dp"
        android:minWidth="70dp"
        android:background="@drawable/shape_shade_red_bg"
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="正常运行" />
</LinearLayout>