<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bit.communityProperty.activity.access.VideoActiveOpenActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <SurfaceView
            android:id="@+id/sfv_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></SurfaceView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <Button
                android:id="@+id/bnt_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_rad22_red"
                android:minHeight="@dimen/common_dp_44"
                android:text="断开"
                android:textColor="@color/white"
                android:textSize="@dimen/common_sp_16" />

            <Button
                android:id="@+id/bnt_open"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_rad22_blue"
                android:minHeight="@dimen/common_dp_44"
                android:text="开门"
                android:textColor="@color/white"
                android:textSize="@dimen/common_sp_16" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
