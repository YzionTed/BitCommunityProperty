<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:background="@drawable/shape_allround_while"
    android:orientation="vertical">

    <TextView
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:id="@+id/tv_dialog_title"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/tv_black_33"/>

    <TextView
        android:textColor="@color/tv_gray_66"
        android:textSize="15sp"
        android:padding="15dp"
        android:id="@+id/tv_dialog_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <View style="@style/line" android:layout_marginTop="40dp"></View>
    <LinearLayout
        android:showDividers="middle"
        android:divider="@drawable/base_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:orientation="horizontal">

        <TextView
            android:visibility="gone"
            android:textSize="@dimen/common_sp_16"
            android:id="@+id/btn_dia_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/tv_gray_99" />

        <TextView
            android:textSize="@dimen/common_sp_16"
            android:id="@+id/btn_dia_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/color_text_blue" />
    </LinearLayout>


</LinearLayout>