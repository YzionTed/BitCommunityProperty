<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bit.communityProperty.activity.access.VideoActiveOpenActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <SurfaceView
            android:id="@+id/sfv_play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"></SurfaceView>


        <RelativeLayout
            android:id="@+id/rl_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:gravity="center"
                android:text="小区大门门禁区"
                android:textColor="#333333"
                android:textSize="18sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name"
                android:layout_marginTop="13dp"
                android:gravity="center"
                android:text="发起视频通话申请"
                android:textColor="#666666"
                android:textSize="15sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="60dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">


            <Button
                android:id="@+id/bnt_close"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_rad22_red"
                android:minHeight="@dimen/common_dp_44"
                android:text="挂断"
                android:textColor="@color/white"
                android:textSize="@dimen/common_sp_16" />

            <Button
                android:id="@+id/bnt_open"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:background="@drawable/shape_rad22_blue"
                android:minHeight="@dimen/common_dp_44"
                android:text="接听"
                android:textColor="@color/white"
                android:textSize="@dimen/common_sp_16" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
